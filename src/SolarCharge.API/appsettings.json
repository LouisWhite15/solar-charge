{
  "Inverter": {
    "Type": "Fronius",
    "Url": "http://192.168.1.51"
  },
  "Persistence": {
    "ConnectionString": "Data Source=~/app-persistence/solar-charge.db"
  },
  "Application": {
    "InverterStatusCheckCron": "*/2 * * * *",
    "EvaluateSolarGenerationCron": "*/10 * * * *"
  },
  "InfluxDB": {
    "Url": "http://localhost:8086",
    "Token": "AdminToken0=="
  },
  "Features": {
    "IsInfluxDbEnabled": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
